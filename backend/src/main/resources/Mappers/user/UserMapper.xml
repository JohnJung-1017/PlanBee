<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 아래 예시입니다 지우고 사용하세요 -->
<mapper namespace="com.pj.planbee.mapper.UserMapper"> <!-- 여기가 사용할 매퍼를 연결해주는 역할, 경로주의 , 그리고 디폴트 값들은 테이블 생성에서 지정할 것-->
	<resultMap type="com.pj.planbee.dto.UserDTO" id="user">
		<id property="userId" column="user_id"/>
		<result property="userPw" column="user_pw"/>
		<result property="userName" column="user_name"/>
		<result property="userEmail" column="user_email"/>
		<result property="userPhone" column="user_phone"/>
	</resultMap>
	
	<insert id="insertUser">
		insert into User (user_id, user_pw, usre_name, user_email, user_phone) values (#{userId}, #{userPw}, #{userName}, #{userEmail}, #{userPhone})
	</insert>
	
	<select id="countUserId">
		SELECT COUNT(*) FROM user WHERE user_id = #{userId}
	</select>
	
	<select id="countUserEmail">
		SELECT COUNT(*) FROM user WHERE user_email = #{userEmail}
	</select>
</mapper>